<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:boxedEdges="none"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/drugImage"
        android:layout_width="72dp"
        android:layout_height="86dp"
        android:contentDescription="Drug Image"
        android:cropToPadding="true"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <LinearLayout
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/drugFullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Drug's name very long full name just for testing purpose"
            android:textAlignment="viewStart"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/drugProducer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Producer of this drugs, also very long @android:string/fingerprint_icon_content_description" />

        <TextView
            android:id="@+id/drugMnn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MNN" />

        <TextView
            android:id="@+id/drugOnStockAvailability"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Available in stoke" />

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@android:color/holo_blue_dark"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="153dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/price"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/drugPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1 024,0 $"
                android:textAlignment="viewEnd"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/drugAddToCart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/inner_frame_layout_padding"
            android:clickable="true"
            app:backgroundTint="@android:color/holo_green_dark"
            app:fabSize="mini"
            app:srcCompat="@android:drawable/ic_input_add"
            android:focusable="true" />

        <TextView
            android:id="@+id/drugCountInCart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1 034"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="16sp"
            android:textStyle="bold" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/drugRemoveFromCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/inner_frame_layout_padding"
            android:clickable="true"
            app:backgroundTint="@android:color/darker_gray"
            app:elevation="0dp"
            app:fabSize="mini"
            app:srcCompat="@android:drawable/ic_input_delete"
            android:focusable="true" />

    </LinearLayout>

    <View
        android:id="@+id/divider3"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:layout_weight="1"
        android:background="@android:color/holo_blue_dark"
        android:visibility="visible" />
</LinearLayout>
